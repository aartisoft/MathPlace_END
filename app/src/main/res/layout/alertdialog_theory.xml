<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">



    <LinearLayout
        android:id="@+id/scrollViewTheory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Теория"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            android:layout_marginLeft="16px"
            android:textStyle="bold"
            android:textColor="#5B6175"/>

        <LinearLayout
            android:id="@+id/linearLayoutTaskTextContest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/text_rounded_corner_2"
            >
        </LinearLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/dialog_negative_btnTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorPrimary"
                    android:text="назад"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/dialog_positive_btnTask"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:background="@drawable/btn_rounded_corner_new"
                    android:onClick="send"
                    android:scaleType="fitXY"
                    android:text="Выбрать"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</ScrollView>
