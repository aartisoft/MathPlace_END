<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linearLayoutBottomSheet"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/AppModalStyle"
    tools:context=".BottomSheetFragment"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:id="@+id/linearLayoutSolv"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="46dp">
        <ImageView
            android:id="@+id/imageViewAns"
            android:layout_width="30dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"/>
        <TextView
            android:id="@+id/textViewSolv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Открыть решение"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayoutDraft"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="46dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/code3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Открыть черновик"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutWebsite"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="46dp">
        <ImageView
            android:id="@+id/imageViewWebsite"
            android:layout_width="30dp"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/website"/>
        <TextView
            android:id="@+id/textViewWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Перейти на сайт 'MathPlace'"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutLikeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageViewLike"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/like_empty" />

        <TextView
            android:id="@+id/textViewTaskLike"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Поставить лайк\n этой теме"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            />
    </LinearLayout>





</LinearLayout>