<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:weightSum="100"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewRankUser"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="10dp"
        android:src="@drawable/account_new" />

    <LinearLayout
        android:layout_weight="80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewNameRankUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black"
            android:text="Вы"
            android:textColor="@color/account_white"
            android:textSize="25sp" />


        <TextView
            android:id="@+id/textViewTextRankUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:text="загрузка..."
            android:textColor="@color/account_white"
            android:textSize="17sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/textViewPositionRankUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_weight="10"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="..."/>


</LinearLayout>
