<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containerBottomSheetSearch"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    style="@style/AppModalStyle"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поиск собеседника"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textSize="27sp"
        style="@style/TitleOlympParam"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:hint="Введите имя пользователя..."
        android:textColorHint="@color/text_color"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/rounded_corner_search"
        android:padding="10dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_list_themeUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>