<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="3dp">
    <LinearLayout
        android:id="@+id/linearLayoutWidth"
        android:layout_width="330dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/subcategory_imageMenu"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/algebra" />

                <ProgressBar
                    android:id="@+id/subcategory_progressMenu"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:max="100"
                    android:progress="80"
                    android:progressDrawable="@drawable/circle_progress_bar"
                    android:background="@drawable/circle_shape"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewNameMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Теорема Пифагора и что-то еще"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textViewTextMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:maxLines="4"
                        android:singleLine="false"
                        android:layout_marginBottom="5dp"
                        android:text="Решено 100 задач"
                        android:textColor="@color/text_color"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="5"
                        android:layout_marginLeft="18dp"
                        android:scaleType="fitCenter"
                        card_view:srcCompat="@drawable/like" />
                    <TextView
                        android:id="@+id/textViewLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginLeft="4dp"
                        android:maxLines="2"
                        android:layout_weight="15"
                        android:singleLine="false"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="5dp"
                        android:text="100"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1EAEA"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="продолжить"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
