<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/achivAchiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewmedalAchiv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@android:color/transparent"
            android:src="@drawable/achiv2" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewAchivName"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black"
            android:text="МЕГАМОЗГ"
            android:textColor="@color/colorPrimary"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/textViewAchivText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"
            android:maxLines="2"
            android:singleLine="false"
            android:text="Решить все задачи"
            android:textColor="@color/text_color"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBarAchiv"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:max="100"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"
                android:progress="80"
                android:theme="@style/CircularProgress" />

<!--            <TextView-->
<!--                android:id="@+id/textViewProgress"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="20dp"-->
<!--                android:textSize="14sp"-->
<!--                android:textColor="#000000"-->
<!--                android:layout_marginEnd="1dp"-->
<!--                android:text="1/3" />-->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
